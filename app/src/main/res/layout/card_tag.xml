<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/defaultMarginSmall"
    android:foreground="?selectableItemBackground"
    tools:layout_gravity="center"
    app:cardBackgroundColor="?artListCardBackgroundColor"
    app:cardCornerRadius="3dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/defaultMarginSmall"
        tools:ignore="UseCompoundDrawables"
        >
        <TextView
            android:id="@+id/title"
            android:textSize="14sp"
            tools:text="Keter"
            android:layout_width="wrap_content"
            android:paddingRight="@dimen/defaultMarginSmall"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/action"
            android:src="@drawable/ic_add"
            android:layout_width="@dimen/defaultMargin"
            android:layout_height="@dimen/defaultMargin"
            tools:ignore="ContentDescription"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>