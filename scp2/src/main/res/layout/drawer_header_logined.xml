<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/headerHeight"
    android:background="?toolbarBackgroundGradient"
    >

    <LinearLayout
        android:id="@+id/levelContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        tools:ignore="UseCompoundDrawables"
        >

        <TextView
            android:id="@+id/level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/defaultMarginSmall"
            android:layout_marginLeft="@dimen/defaultMargin"
            android:layout_weight="1"
            android:text="@string/access_level"
            android:textColor="@color/material_blue_gray_50"
            android:textSize="17sp"
            />

        <ImageView
            android:id="@+id/levelUp"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/defaultMarginSmall"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_upward_white_24dp"
            android:tint="@color/material_green_500"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/defaultMarginSmall"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/levelContainer"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="@dimen/defaultMarginSmall"
        android:layout_marginLeft="@dimen/defaultMargin"
        android:textColor="@color/material_blue_gray_50"
        android:textSize="19sp"
        />

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/circleView"
        android:layout_width="277dp"
        android:layout_height="277dp"
        app:cpv_autoTextSize="true"
        app:cpv_barColor="@color/primary"
        app:cpv_barWidth="35dp"
        app:cpv_innerContourSize="0dp"
        app:cpv_maxValue="100"
        app:cpv_outerContourSize="0dp"
        app:cpv_rimColor="@color/primary_light"
        app:cpv_rimWidth="35dp"
        app:cpv_seekMode="true"
        app:cpv_showUnit="true"
        app:cpv_spinColor="@color/primary"
        app:cpv_textColor="@color/primary_dark"
        app:cpv_textScale="1"
        app:cpv_unit="%"
        app:cpv_unitColor="@color/primary_light"
        app:cpv_unitPosition="right_top"
        app:cpv_unitScale="1"
        app:cpv_value="10" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_above="@id/name"
        android:layout_marginBottom="@dimen/defaultMarginSmall"
        android:layout_marginLeft="@dimen/defaultMargin"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/scplogo"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        />

    <ImageView
        android:id="@+id/logout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/avatar"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="@dimen/defaultMargin"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_exit_to_app_white_48dp"
        />

    <ImageView
        android:id="@+id/inapp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/avatar"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="@dimen/defaultMargin"
        android:layout_toRightOf="@id/avatar"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_monetization_on_white_24dp"
        />

</RelativeLayout>